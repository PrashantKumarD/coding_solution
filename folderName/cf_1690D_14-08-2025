import java.util.Scanner;
 
public class Main {
 
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int t = scanner.nextInt();
 
        while (t-- > 0) {
            int n = scanner.nextInt();
            int k = scanner.nextInt();
            String s = scanner.next();
 
            int currentWhiteCount = 0;
            for (int i = 0; i < k; i++) {
                if (s.charAt(i) == 'W') {
                    currentWhiteCount++;
                }
            }
 
            int minWhiteCount = currentWhiteCount;
 
            for (int i = k; i < n; i++) {
                if (s.charAt(i) == 'W') {
                    currentWhiteCount++;
                }
                if (s.charAt(i - k) == 'W') {
                    currentWhiteCount--;
                }
                minWhiteCount = Math.min(minWhiteCount, currentWhiteCount);
            }
 
            System.out.println(minWhiteCount);
        }
        scanner.close();
    }
}
