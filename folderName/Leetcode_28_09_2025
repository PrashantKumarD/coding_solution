class Solution {
    public int largestPerimeter(int[] nums) {
        Arrays.sort(nums); int n=nums.length;
        for(int i=n-1;i>=2;i--){
            int l = nums[i];
            int m = nums[i-1];
            int s = nums[i-2];
            if(m+s > l) return l+m+s;
        }
        return 0;
    }
}
